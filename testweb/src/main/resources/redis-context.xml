<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

	<bean id="gatewayConfig" class="com.nhncorp.redis.cluster.gateway.GatewayConfig">
		<property name="zkAddress" value="dev.xnbasearc.navercorp.com:2181" />
		<property name="clusterName" value="java_client_test" />
	</bean>

	<bean id="redisCulsterConnectionFactory"
		class="com.nhncorp.redis.cluster.spring.RedisClusterConnectionFactory"
		destroy-method="destroy">
		<property name="config" ref="gatewayConfig" />
	</bean>

	<bean id="redisTemplate"
		class="com.nhncorp.redis.cluster.spring.StringRedisClusterTemplate">
		<property name="connectionFactory" ref="redisCulsterConnectionFactory" />
	</bean>

	<bean id="gatewayClient" class="com.nhncorp.redis.cluster.gateway.GatewayClient"
		destroy-method="destroy">
		<constructor-arg ref="gatewayConfig" />
	</bean>
</beans>
