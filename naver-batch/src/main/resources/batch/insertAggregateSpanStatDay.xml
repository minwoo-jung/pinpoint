<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:batch="http://www.springframework.org/schema/batch"
       xsi:schemaLocation="http://www.springframework.org/schema/batch http://www.springframework.org/schema/batch/spring-batch.xsd
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <batch:job id="aggreagteSpanStatDayJob">
        <batch:step id="aggreagteSpanStatDayStop">
            <batch:tasklet ref="aggregateSpanStatDayTasklet"/>
        </batch:step>
        <batch:listeners>
            <batch:listener ref="jobFailListener"/>
        </batch:listeners>
    </batch:job>

    <bean id="aggregateSpanStatDayTasklet" class="com.navercorp.pinpoint.batch.AggregateSpanStatDayTasklet"/>
</beans>