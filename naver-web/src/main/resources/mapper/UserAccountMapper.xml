<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.navercorp.pinpoint.web.dao.UserAccountDao">

    <select id="isExistUserId" resultType="java.lang.Boolean">
        SELECT EXISTS (
            SELECT 1
            FROM user_account
            WHERE user_id = #{userId}
        )
    </select>

    <select id="selectUserAccount" resultType="UserAccount">
        SELECT *
        FROM user_account
        WHERE user_id = #{userId}
    </select>

    <insert id="insertUserAccount" parameterType="UserAccount">
        INSERT INTO user_account (user_id, password)
        VALUES (#{userId}, #{password})
    </insert>

    <update id="updateUserAccount" parameterType="UserAccount">
        UPDATE user_account
        SET user_id = #{userId}, password = #{password}
        WHERE user_id = #{userId}
    </update>

    <delete id="deleteUserAccount" parameterType="string">
        DELETE
        FROM user_account
        WHERE user_id = #{userId}
    </delete>
</mapper>
